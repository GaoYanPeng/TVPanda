<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:paddingTop="@dimen/dian_5dp"
              android:paddingRight="2.5dp"
              android:paddingLeft="2.5dp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:background="@mipmap/home_list_item_bg"
            android:scaleType="fitXY"
            android:id="@+id/game_data_pictures"
            android:layout_width="match_parent"
            android:layout_height="90dp"/>
        <TextView
            android:layout_centerVertical="true"
            android:textSize="@dimen/dian_10dp"
            android:textColor="@android:color/white"
            android:id="@+id/data_item_name"
            android:background="#70000000"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
    </RelativeLayout>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/colorDarkBlue"
        android:id="@+id/deta_item_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>