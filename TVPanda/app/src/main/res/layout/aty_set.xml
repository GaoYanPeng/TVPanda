<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorGrayLineX"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dian_40dp">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dian_10dp"
                android:src="@drawable/ico_return_selector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="设置"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/title_tv_19"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dian_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dian_40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dian_10dp"
                android:text="扫一扫"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/title_tv_17"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dian_20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dian_10dp"
                android:src="@mipmap/home_more"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>