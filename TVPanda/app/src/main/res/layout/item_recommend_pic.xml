<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="2.5dp"
              android:paddingRight="2.5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dian_100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_pic_item_recommend_t"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/home_list_item_bg"/>

        <TextView
            android:id="@+id/tv_title_item_pic_recommend_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorGrayT"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#fff"
            android:textSize="@dimen/dian_10sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dian_5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_username_pic_item_recommend_t"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/dian_12sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/gray_eye"/>

        <TextView
            android:id="@+id/tv_count_item_pic_recommend_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/dian_10sp"/>

    </LinearLayout>


</LinearLayout>