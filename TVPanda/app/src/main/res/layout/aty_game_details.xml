<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dian_40dp">
            <ImageView
                android:id="@+id/deta_left_return"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dian_10dp"
                android:src="@drawable/ico_return_selector"/>
            <TextView
                android:id="@+id/game_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/title_tv_19"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:paddingLeft="2.5dp"
        android:paddingRight="2.5dp"
        android:id="@+id/details_Ryl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>