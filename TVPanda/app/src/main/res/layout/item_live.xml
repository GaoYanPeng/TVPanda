<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="@dimen/dian_5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dian_100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/live_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/home_list_item_bg"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
             />

        <TextView
            android:id="@+id/live_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGrayT"
            android:textSize="@dimen/dian_10sp"
            android:text="@string/live_title"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_margin="@dimen/dian_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/live_anchor_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/dian_12sp"
            android:layout_height="wrap_content"
          />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/gray_eye"/>

        <TextView
            android:id="@+id/live_looking_peoples"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />

    </LinearLayout>




</LinearLayout>
